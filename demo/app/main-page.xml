<Page   xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" xmlns:al="nativescript-awesome-loaders">
  <ActionBar title="{N} Awesome Loaders"/>
  <GridLayout rows="*,*,*,*,*,*,*">
    <GridLayout columns="*,*,*,*">
    <al:AwesomeLoaders width="60" height="60" indicator="BallPulse" indicatorColor="#F44336" />
    <al:AwesomeLoaders indicatorColor="#9E9E9E" col="1" width="60" height="60"  indicator="BallGridPulse" />
    <al:AwesomeLoaders indicatorColor="#607D8B" col="2" width="60" height="60"  indicator="BallClipRotate" />
    <al:AwesomeLoaders indicatorColor="#CDDC39" col="3" width="60" height="60"  indicator="BallClipRotatePulse" />
    </GridLayout>
    
    <GridLayout row="1" columns="*,*,*,*">
    <al:AwesomeLoaders indicatorColor="#9C27B0" width="60" height="60"  indicator="SquareSpin" />
    <al:AwesomeLoaders indicatorColor="#000000" col="1" width="60" height="60"  indicator="BallClipRotateMultiple" />
    <al:AwesomeLoaders indicatorColor="#AA55BB" col="2" width="60" height="60"  indicator="BallPulseRise" />
    <al:AwesomeLoaders indicatorColor="#1EFF65" col="3" width="60" height="60"  indicator="BallRotate" />
    </GridLayout>
    
      <GridLayout row="2" columns="*,*,*,*">
    <al:AwesomeLoaders indicatorColor="#4CAF50" width="60" height="60"  indicator="CubeTransition" />
    <al:AwesomeLoaders col="1" width="60" height="60"   indicator="BallZigZag" />
    <al:AwesomeLoaders col="2" width="60" height="60"  indicator="BallZigZagDeflect" />
    <al:AwesomeLoaders col="3" width="60" height="60"  indicator="BallTrianglePath" />
    </GridLayout>
    
    <GridLayout row="3" columns="*,*,*,*">
    <al:AwesomeLoaders indicatorColor="#FF9800" width="60" height="60"  indicator="BallScale" />
    <al:AwesomeLoaders col="1" width="60" height="60"  indicator="LineScale" />
    <al:AwesomeLoaders col="2" width="60" height="60"  indicator="LineScaleParty" />
    <al:AwesomeLoaders col="3" width="60" height="60"  indicator="BallScaleMultiple" />
    </GridLayout>
    
      <GridLayout row="4" columns="*,*,*,*">
    <al:AwesomeLoaders indicatorColor="#FF5722" width="60" height="60"  indicator="BallPulseSync" />
    <al:AwesomeLoaders col="1" width="60" height="60"  indicator="BallBeat" />
    <al:AwesomeLoaders col="2" width="60" height="60"  indicator="LineScalePulseOut" />
    <al:AwesomeLoaders col="3" width="60" height="60"  indicator="LineScalePulseOutRapid" />
    </GridLayout>
    
    <GridLayout row="5" columns="*,*,*,*">
    <al:AwesomeLoaders indicatorColor="#795548" width="60" height="60"  indicator="BallScaleRipple" />
    <al:AwesomeLoaders indicatorColor="#16FCC9" col="1" width="60" height="60"  indicator="BallScaleRippleMultiple" />
    <al:AwesomeLoaders indicatorColor="#FAFC06" col="2" width="60" height="60"  indicator="BallSpinFadeLoader" />
    <al:AwesomeLoaders indicatorColor="#CE5F0F"  col="3" width="60" height="60"  indicator="LineSpinFadeLoader" />
    </GridLayout>
    
      <GridLayout row="6" columns="*,*,*,*" id="gl">
    <al:AwesomeLoaders col="1" indicatorColor="pink" width="60" height="60"  indicator="TriangleSkewSpin" />
    <al:AwesomeLoaders col="2" width="60" height="60"   indicator="Pacman" indicatorColor="#FFEB3B" />
    <al:AwesomeLoaders indicatorColor="orange" col="3" width="60" height="60"  indicator="BallGridBeat" />
    </GridLayout>
    
  </GridLayout>
</Page>